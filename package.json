{
  "name": "idb-graphql",
  "version": "1.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/module/index.js",
  "author": "Jamee Kim <jameekim@nodaplife.me>",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all clean:* build:*",
    "build:cjs": "tsc -p src/tsconfig.json",
    "build:module": "tsc -p src/tsconfig.module.json",
    "build:test": "tsc -p test/source/tsconfig.json",
    "clean:build": "rimraf dist",
    "clean:test": "rimraf test/dist",
    "clean:coverage": "rimraf coverage && rimraf .nyc_output",
    "pretest": "npm-run-all clean:build clean:test build:cjs build:test",
    "test": "mocha",
    "pretest:coverage": "npm-run-all clean:coverage pretest",
    "test:coverage": "nyc mocha",
    "coverage:send": "nyc report --reporter text-lcov | coveralls"
  },
  "dependencies": {
    "dexie": "^2.0.4",
    "dexie-observable": "^1.0.0-beta.4",
    "graphql": "^14.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/graphql": "^0.13.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "indexeddbshim": "^3.8.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "include": [
      "dist/cjs/**/*.js"
    ],
    "exclude": [
      "dist/cjs/types/**/*.js"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  }
}
